<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="SamplePU" transaction-type="JTA">
        <jta-data-source>java:comp/env/jdbc/SampleDS</jta-data-source>

        <!-- Entity Classes -->
        <class>com.example.jakartaee.entity.Account</class>
        <class>com.example.jakartaee.entity.Contact</class>
        <class>com.example.jakartaee.entity.Address</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- PostgreSQL Dialect -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>

            <!-- Hibernate specific properties (if using Hibernate as JPA provider) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Connection Pool -->
            <property name="hibernate.connection.pool_size" value="10"/>

            <!-- Second Level Cache -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
    </persistence-unit>

</persistence>
